{% extends 'base.jinja' %}

{% block header %}
<h1>{% block title %}Downloads{% endblock %}</h1>
{% endblock %}

{% block content %}
{% for download in downloads %}
<article class="post">
  <header>
    <div>
      <h1>{{ download['title'] }}</h1>
      <img src="{{ url_for('static', filename='images/'+download['image']) }}">
      <div class="about">{{ download['description'] }}</div>
    </div>
    <a class="action" href="{{ loop.index0 }}">Download</a>
  </header>
</article>
{% if not loop.last %}
<hr>
{% endif %}
{% endfor %}
{% endblock %}